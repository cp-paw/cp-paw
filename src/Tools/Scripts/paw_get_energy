#!/bin/sh
export PROJECT=$1
if [ -z $1 ]; then
  echo error in paw_get_energy: missing argument
  echo specify root name of the paw_project
  exit 1
fi
#
# Does protocoll file exist?
#
if [ ! -e $PROJECT.prot ]; then
  echo error in paw_get_energy: protocoll file does not exist
  echo specified: $PROJECT.prot
  exit 1
fi
#
#  extract result
#
export RES=`grep "TOTAL ENERGY" $PROJECT.prot | tail -n1 | awk -F: '{print $2}' `
if [ -z  "$RES" ] ; then
  echo error in paw_get_energy: no total energy listed
  exit 1
fi
#
#  report result
#
echo $RES
exit 0
